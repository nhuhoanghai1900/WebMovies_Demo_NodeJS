<div class="container container-profile">

    <div class="row-profile">
        <div class="profile">
            <img type="file" src="{{user.img}}" class="rounded-circle shadow-4 img-thumbnail">
            <div class="avatar-overlay">
                <span href="#" type="button" data-bs-toggle="modal" data-bs-target="#uploadModal">
                    Thay đổi ảnh
                </span>
            </div>
        </div>
        <div class="media-body">
            <h2 class="mt-0 mb-1">{{user.fullName}}</h2>
            <p class="medium mb-3"> <i class="fas fa-map-marker-alt mr-2"></i>{{user.email}}</p>
        </div>
    </div>

    <div class="row media-user bg-dark text-white m-0">
        <h3 class="font-weight-bold mb-3 d-block">
            <span>{{user.fullName}}</span> --- TIÊN VỰC 3D
        </h3>
        <h5 class="font-weight-bold">{{roleLabel}}</h5>
        <small class="text-white m-0"><i class="fas fa-image mr-1"></i> Nhập đạo: {{createdDate}}</small>
    </div>
    {{!-- /////////////////// --}}
    <div class="row-filter-select" style="border-radius: 0; background: #900000;">
        <small class="mb-0 text-white"><i class="bi bi-bookmark-heart"></i> PHIM YÊU THÍCH</small>
        {{#if showAll}}
        <a href="/users/me/profile/?showAll=false" class="btn">Thu gọn</a>
        {{else}}
        <a href="/users/me/profile/?showAll=true">Hiện tất cả</a>
        {{/if}}
    </div>

    <div class="row-filter-list-movies bg-dark" style="border-radius: 0;"">
        {{#each movies}}
        <a class=" text-white text-decoration-none" href="/movies/{{this.slug}}/details">
        <div class="col-filter-movie">
            <img src="{{this.img}}" alt="">
            <div>
                <p class="name-filter-movie">{{this.name}}</p>
                <small class="category-filter-movie"><i class="bi bi-badge-3d-fill"></i> {{this.language}}</small>
            </div>
        </div>
        </a>
        {{/each}}
    </div>
</div>