<div class="container m-5 mx-auto">
    <div class="row justify-content-center">
        <div class="col-10 col-md-6 p-5 col-login-register">
            <h2 class="text-center">Đăng nhập tài khoản</h2>
            <form id="login-form" action="/users/login" method="POST">
                <!-- Email -->
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" id="email" name="email" class="form-control" autocomplete="new-email"
                        placeholder="VD: nhuhoanghai@gmail.com" required />
                    <small id="email-error" class="text-danger"></small>
                </div>
                <!-- Password -->
                <div class="mb-3 gap-3">
                    <label for="password" class="form-label">Mật khẩu</label>
                    <div class="input-group">
                        <input type="password" class="form-control" id="password" name="password"
                            autocomplete="new-password" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d).{6,12}$" required />
                        <button class="btn btn-outline-secondary" type="button" id="togglePassword" tabindex="-1">
                            <i class="bi bi-eye" id="toggleIcon" active></i>
                        </button>
                    </div>
                    <small id="password-error" class="text-danger"></small>
                </div>
                <div class="m-3 mx-auto">
                    <small id="check-error" class="text-danger"></small>
                </div>
                <!-- Submit Button -->
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary w-100">Đăng nhập</button>
                </div>
                <!-- Redirect to login -->
                <div class="text-center">
                    <p>Chưa có tài khoản? <a href="/users/register"> Tạo tài khoản</a></p>
                </div>
            </form>
        </div>
    </div>
</div>

