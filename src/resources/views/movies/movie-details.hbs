<div class="container container-movie-details">

    <div class="row m-2">
        <h6>Trang chủ | Thông tin</h6>
    </div>

    <div class="movie-details">
        <div class="movie-details-img">
            <img src="{{movies.img}}" class="card-img-top img-thumbnail">
        </div>

        <div class="movie-details-des">
            <table class="table text-white table-dark bg-transparent align-middle m-0">
                <tbody class="table-tbody-movie-details">
                    <tr>
                        <th>Tên phim:</th>
                        <td class="td-name">{{movies.name}}</td>
                    </tr>
                    <tr>
                        <th>Trạng thái:</th>
                        <td>{{movies.status}}</td>
                    </tr>
                    <tr>
                        <th>Chất lượng:</th>
                        <td>{{movies.quality}}</td>
                    </tr>
                    <tr>
                        <th>Ngôn ngữ:</th>
                        <td>{{movies.language}}</td>
                    </tr>
                    <tr>
                        <th>Quốc gia:</th>
                        <td>{{movies.country}}</td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            <a type="button" href="/favorites-movies/{{movies._id}}/favorites"
                                class="text-white text-decoration-none fs-5 fw-bold lh-base favorite-item btn"
                                data-id="{{movies._id}}">
                                <i data-id="{{movies._id}}" class="bi bi-heart favorite-active-item"></i>
                                <span class="text-active-fav">Theo Dõi</span>
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>


    <!-- Row cho danh sách nút tập phim -->
    <div class=" row-list-movie">
        <h5>Xem phim:</h5>
        <div class="col-list-movie">
            {{#each movies.episodes}}
            <a href="/movies/{{../movies.slug}}/watch/{{epNumber}}" class="btn btn-movie-episodeId m-1 checkTokenMovies"
                style="width: 100px; text-align: center;" data-episode-id="{{epNumber}}">
                Tập {{epNumber}}
            </a>
            {{/each}}
        </div>
    </div>
</div>


