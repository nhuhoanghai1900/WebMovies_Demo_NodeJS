<div class="container-customs w-50 mx-auto">
  <div class="d-flex gap-3">
    <button type="button" class="btn btn-danger btn-trash">
      <i class="bi bi-list-columns"></i>
      <a href="/movies/create/{{movies._id}}/episode" style="font-size: 17px;">Thêm tập mới</a>
    </button>
    <button type="button" class="btn btn-warning btn-trash m-0">
      <i class="bi bi-arrow-left-square"></i>
      <a href="/movies/{{movies._id}}/edit" style="font-size: 17px;">Quay lại</a>
    </button>
  </div>

  <form class="mt-4 " method="POST" action="/movies/{{movies._id}}?_method=PUT">
    <h4 style="color: coral; font-style: italic">{{movies.name}}</h4>
    <table class="table table-dark table-striped text-center table-bordered align-middle">
      <thead>
        <tr>
          <th style="width: 15%">Số tập</th>
          <th>Đường dẫn video</th>
          <th colspan="2">Tùy chọn</th>
        </tr>
      </thead>
      {{#each movies.episodes}}
      <tbody>
        <tr>
          <td>
            <input type="number" class="form-control" value="{{this.epNumber}}" id="epNumber"
              name="episodes[{{@index}}][epNumber]" />
          </td>
          <td>
            <input type="text" class="form-control" value="{{this.videoUrl}}" id="videoUrl"
              name="episodes[{{@index}}][videoUrl]" />
          </td>
          <td>
            <button type="submit" class="btn btn-success">Cập nhật</button>
          </td>
          <td>
            <a href="" class="btn btn-danger" data-id="{{this._id}}" data-bs-toggle="modal"
              data-bs-target="#delete-episode-modal">Xóa</a>
          </td>
        </tr>
      </tbody>
      {{else}}
      <div class="d-flex justify-content-center gap-3">
        <h5>Phim chưa có tập nào!!!</h5>
        <a href="/movies/create/{{movies._id}}/episode">Thêm tập phim mới</a>
      </div>
      {{/each}}
    </table>

  </form>
</div>

{{!-- modal confirm --}}
<div id="delete-episode-modal" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">DỪNG LẠI!!!</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Bạn chắc chắn muốn xóa phim này?</p>
      </div>
      <div class="modal-footer">
        <button id="btn_delete-episode-modal" type="button" class="btn btn-success">Xóa ngay
        </button>
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Hủy</button>
      </div>
    </div>
  </div>
</div>

<form name="delete-episode-form" method="POST"></form>

