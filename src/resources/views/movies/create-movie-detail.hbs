<div class="container container-customs">
  <div class="d-flex gap-3">
    <h3 style="color: coral;">TẬP MỚI</h3>
    <button type="button" class="btn btn-warning btn-trash m-0">
      <i class="bi bi-arrow-left-square"></i>
      <a class="text-decoration-none text-[17px] text-white" href="/movies/{{movies._id}}/edit/details">Quay lại</a>
    </button>
  </div>

  <form class="mt-3" method="POST" action="/movies/{{movies._id}}/storeEpisode">
    <table class="table table-dark table-striped text-center align-middle">
      <thead>
        <tr>
          <th style="width: 20%">Số tập</th>
          <th>Đường dẫn video</th>
          <th style="width: 10%">Hành động</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <input type="number" class="form-control" name="epNumber" placeholder="VD: 1" required autofocus />
          </td>
          <td>
            <input type="text" class="form-control" name="videoUrl" placeholder="https://..." required />
          </td>
          <td class="text-center">
            <button type="submit" class="btn btn-success btn-sm">Lưu</button>
          </td>
        </tr>
      </tbody>
    </table>
  </form>

</div>