<form name="container-form" class="container mt-4 w-75" method="POST" action="/movies/handle-form-actions">
  <div class=" d-flex gap-3 align-items-center">
    <a href="/me/trash/movies" class="btn btn-danger">
      <i class="bi bi-trash"></i>
      Thùng rác ({{deletedCount}})
    </a>
    <h2>BẢNG XẾP HẠNG PHIM</h2>
  </div>

  <div class="mt-3 d-flex gap-3 align-items-center">
    <div class="form-check">
      <input class="form-check-input" type="checkBox" value="" id="checkBox-all">
      <label class="form-check-label" for="checkBox-all">
        Chọn tất cả
      </label>
    </div>
    <div class="form-floating-sm">
      <select class="form-select" id="floatingSelect" name="action" aria-label="Floating label select example" required>
        <option value="" disabled selected>-- Hành động</option>
        <option value="delete">Xóa</option>
      </select>
    </div>
    <button id="btn-disabled" type="button" class="btn btn-success" disabled>Thực hiện</button>
  </div>

  <table class="table table-dark table-striped table-bordered text-center align-middle mt-4">
    <thead class="align-middle">
      <tr>
        <th></th>
        <th scope="col">STT</th>
        <th scope="col">TÊN PHIM</th>
        <th scope="col"></th>
        <th scope="col">TRẠNG THÁI</th>
        <th scope="col">CHẤT LƯỢNG</th>
        <th scope="col">THỂ LOẠI</th>
        <th scope="col">QUỐC GIA</th>
        <th scope="col">LỊCH CHIẾU</th>
        <th scope="col">THỜI GIAN TẠO</th>
        <th scope="col">TÙY CHỌN</th>
      </tr>
    </thead>
    <tbody>
      {{#each moviesMe}}
      <tr>
        <td>
          <div class="form-check">
            <input class="form-check-input" type="checkBox" name="Ids[]" value="{{this._id}}">
          </div>
        </td>
        <th scope="row">{{sum @index 1}}</th>
        <td>{{this.name}}</td>
        <td><img class="img-thumbnail w-50" src="{{this.img}}" alt=""></td>
        <td>{{this.status}}</td>
        <td>{{this.quality}}</td>
        <td>{{this.language}}</td>
        <td>{{this.country}}</td>
        <td>{{this.schedule}}</td>
        <td>{{this.createdAt}}</td>
        <td>
          <a href="/movies/{{this._id}}/edit" class="btn btn-warning mb-4">Sửa</a>
          <a href="" class="btn btn-danger" data-id="{{this._id}}" data-bs-toggle="modal"
            data-bs-target="#delete-movies-modal-01">Xóa</a>
        </td>
      </tr>
      {{else}}
      <tr>
        <td colspan="11">Không có phim nào trong danh sách BXH
          <a href="/movies/create">Thêm phim mới vào BXH</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</form>

{{! khi nút xóa ở trên kích hoạt --> hiển thị confirm xác nhận }}
<div id="delete-movies-modal-01" class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">DỪNG LẠI!!!</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Bạn chắc chắn muốn xóa phim này?</p>
      </div>
      <div class="modal-footer">
        <button id="btn__delete-movies-modal" type="button" class="btn btn-success">Xóa ngay
        </button>
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Hủy</button>
      </div>
    </div>
  </div>
</div>

